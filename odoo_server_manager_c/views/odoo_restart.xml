<odoo>
  <data>
    <!-- explicit list view definition -->

    <record model="ir.ui.view" id="odoo_restart.list">
      <field name="name">odoo_restart list</field>
      <field name="model">odoo.restart</field>
      <field name="arch" type="xml">
        <tree>
          <field name="name"/>
          <field name="server"/>
          <field name="username"/>
          <field name="port"/>
        </tree>
      </field>
    </record>


    <!-- actions opening views on models -->

    <record model="ir.actions.act_window" id="odoo_server_manager_c.action_window">
      <field name="name">My Odoo Instances</field>
      <field name="res_model">odoo.restart</field>
      <field name="view_mode">tree,form</field>
    </record>




    <record model="ir.ui.view" id="odoo_server_manager_c.form">
            <field name="name">odoo_server_manager_c form</field>
            <field name="model">odoo.restart</field>
            <field name="arch" type="xml">
                <form>
                    <header>
                        <button name="test_connection" string="Test Connection" class="btn-primary" type="object" />
                        <button name="action_start" string="Start" class="btn-primary" type="object" />
                        <button name="action_stop" string="Stop" class="btn-primary" type="object" />
                        <button name="action_restart" string="Restart" type="object"/>
                    </header>
                    <sheet>
                        <group>
                            <field name="name" />
                            <field name="server" />
                            <field name="port" />
                            <field name="username" />
                            <field name="password" password="True" />
                        </group>
                        <notebook>
                            <page name="server_commands" string="Commands">
                                <group>
                                    <field name="start_command" />
                                    <field name="stop_command" />
                                    <field name="restart_command" />
                                </group>
                            </page>
                            <page name="server_instruction" string="Instruction">
                                <group string="Instruction">
                                    <field name="description"  nolabel="1" placeholder="Instruction"/>
                                </group>
                            </page>
                            <page name="server_history" string="History">
                                <field name="history_ids" nolabel="1" readonly="1">
                                    <tree>
                                        <field name="server_id" />
                                        <field name="create_date" />
                                        <field name="create_uid" />
                                        <field name="state" />
                                    </tree>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <menuitem name="Odoo Restart" id="odoo_server_manager_c.menu_root" groups="odoo_server_manager_c.group_odoo_restart" web_icon="odoo_server_manager_c,static/description/icon_menu.png"/>

        <menuitem name="Odoo Restart" id="odoo_server_manager_c.menu_odoo_restart" parent="odoo_server_manager_c.menu_root"/>

        <menuitem name="Server" id="odoo_server_manager_c.menu_submenu_odoo_restart"
            parent="odoo_server_manager_c.menu_odoo_restart" action="odoo_server_manager_c.action_window"/>


    
  </data>
</odoo>